{
  "name": "project-name",
  "version": "1.0.0",
  "private": true,
  "description": "Описание проекта, его назначения",
  "scripts": {
    "test": "npm run test:editor && npm run test:pug && npm run test:style",
    "test:editor": "editorconfig-cli",
    "test:pug": "glob-exec \"source/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\"",
    "test:style": "stylelint \"source/less/**/*.less\" --syntax=less",
    "test:js": "eslint source/js/**/*.js",
    "start": "gulp",
    "build": "gulp build",
    "lec": "gulp correct-line-ending",
    "lint-staged": "lint-staged"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "lint-staged": {
    "*.{js,pug,md}": "editorconfig-cli",
    "*.pug": "pug-lint",
    "*.less": "stylelint --syntax=less",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@htmlacademy/editorconfig-cli": "1.x",
    "ajv": "^6.4.0",
    "autoprefixer": "8.3.x",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.24.7",
    "del": "^3.0.0",
    "eslint": "^5.16.0",
    "gh-pages": "^2.0.1",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-csso": "^3.0.1",
    "gulp-html-prettify": "^0.0.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-is-binary": "^0.1.2",
    "gulp-less": "^4.0.1",
    "gulp-line-ending-corrector": "^1.0.3",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^1.2.3",
    "gulp-uglify": "^3.0.0",
    "husky": "^1.3.1",
    "less": "^3.8.1",
    "lint-staged": "^8.1.5",
    "path": "^0.12.7",
    "pug": "^2.0.3",
    "pug-lint": "^2.5.0",
    "stylelint": "9.2.x",
    "stylelint-config-htmlacademy": "0.1.x",
    "webpack": "^4.33.0",
    "webpack-stream": "^5.2.1"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.7",
    "core-js": "^3.1.3",
    "jquery": "^3.4.1",
    "mkdirp": "^0.5.1",
    "normalize.less": "^1.0.0",
    "object-fit-images": "^3.2.4",
    "readmore-js": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
